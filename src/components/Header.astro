<aside class="drawer" data-drawer>
	<div class="drawer__links">
		<a href="/#hero">Home</a>
		<a href="/#search">Search</a>
		<a href="/#work">Work Experience</a>
		<a href="/#projects">Projects</a>
		<a href="https://drive.google.com/file/d/1nqoV3ki7hw5dYUTBXSkRJMuuM0nVehdy/view?usp=sharing" target="_blank"
			>Resume</a
		>
		<a href="#connect">Connect</a>
	</div>
</aside>
<style>
.site-header {
	margin: 0;
	padding: 0 1em;
	background: white;
	box-shadow: 0 2px 8px rgba(var(--black), 5%);
	height: 72px;
	display: flex;
	align-items: center;
	position: sticky;
	top: 0;
	z-index: 100;
	transition: transform 0.25s ease;
}
h2 {
	margin: 0;
	font-size: 1em;
}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 100%;
		width: 100%;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5em;
		overflow-x: auto;
	}
	nav a {
		padding: 0 0.75em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		height: 100%;
		display: flex;
		align-items: center;
		white-space: nowrap;
		font-size: 1.1rem;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.nav-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		margin-left: 1em;
	}
	.nav-toggle span {
		display: block;
		width: 24px;
		height: 2px;
		background: currentColor;
		transition: transform 0.3s ease, opacity 0.3s ease;
	}
	.drawer {
		position: fixed;
		top: 0;
		right: 0;
		height: 100vh;
		width: 260px;
		background: white;
		box-shadow: -4px 0 16px rgba(0, 0, 0, 0.1);
		transform: translateX(100%);
		transition: transform 0.3s ease;
		padding: 5rem 2rem 2rem;
		z-index: 90;
		display: flex;
	}
	.drawer.open {
		transform: translateX(0);
	}
	.drawer__links {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		width: 100%;
	}
	.drawer__links a {
		font-size: 1.1rem;
		color: rgb(var(--black));
		text-decoration: none;
	}
	@media (max-width: 900px) {
		.internal-links {
			display: none;
		}
		.social-links {
			display: none;
		}
		.nav-toggle {
			display: flex;
		}
		:global(.dark) .drawer {
			background: #262626;
		}
		:global(.dark) .drawer__links a {
			color: white;
		}
	}

	#themeToggle {
		border: 0;
		background: none;
		padding: 0.5em;
		cursor: pointer;
		border-radius: 5px;
	}

	.sun { fill: black; }
	.moon { fill: transparent; }

	:global(.dark) .sun { fill: transparent; }
	:global(.dark) .moon { fill: white; }

	:global(.dark) {
		color-scheme: dark;
		--theme-bg: #1a1a1a;  /* Dark grey background */
		--theme-text: #e5e5e5; /* Light grey text */
		--theme-accent: #808080; /* Medium grey accent */
		--theme-divider: #404040; /* Darker grey divider */
		--black: 255, 255, 255;
		--gray: 229, 233, 240;
		--gray-dark: 229, 233, 240;
		--gray-light: 34, 41, 57;
		--gray-gradient: rgba(var(--gray-light), 50%), #1a1a1a;
		--accent: #808080;
		--accent-dark: #666666;
	}

	:global(.dark) header {
		background: #262626; /* Slightly lighter than theme-bg for contrast */
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
	}
	.site-header.nav-hidden {
		transform: translateY(-100%);
	}

	:global(.dark) nav a {
		color: white;
	}

	:global(.dark) h2 a {
		color: white;
	}
</style>

<script>
	const theme = (() => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme') || 'light';
		}
		if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
			return 'dark';
		}
		return 'light';
	})();

	// Add preload class to prevent transitions on page load
	document.documentElement.classList.add('preload');

	if (theme === 'light') {
		document.documentElement.classList.remove('dark');
	} else {
		document.documentElement.classList.add('dark');
	}

	window.localStorage.setItem('theme', theme);

	// Remove preload class after page load
	window.addEventListener('load', () => {
		document.documentElement.classList.remove('preload');
	});

	const handleToggleClick = () => {
		const element = document.documentElement;
		element.classList.toggle("dark");

		const isDark = element.classList.contains("dark");
		localStorage.setItem("theme", isDark ? "dark" : "light");
	}

	document.getElementById("themeToggle")?.addEventListener("click", handleToggleClick);

	let lastScroll = window.scrollY;
	const headerEl = document.querySelector('.site-header');
	const drawer = document.querySelector('[data-drawer]');
	const toggleButton = document.querySelector('.nav-toggle');
	const navLinks = document.querySelectorAll('[data-drawer] a');

	const closeDrawer = () => {
		drawer?.classList.remove('open');
		toggleButton?.setAttribute('aria-expanded', 'false');
	};

	window.addEventListener('scroll', () => {
		const current = window.scrollY;
		if (!headerEl) return;
		if (current > lastScroll && current > 80) {
			headerEl.classList.add('nav-hidden');
		} else if (current < lastScroll || current <= 80) {
			headerEl.classList.remove('nav-hidden');
		}
		lastScroll = current;
	});

	toggleButton?.addEventListener('click', () => {
		const isOpen = drawer?.classList.toggle('open');
		toggleButton.setAttribute('aria-expanded', String(Boolean(isOpen)));
	});

	navLinks.forEach((link) =>
		link.addEventListener('click', () => {
			closeDrawer();
		}),
	);

	window.addEventListener('resize', () => {
		if (window.innerWidth > 900) {
			closeDrawer();
		}
	});
</script>
